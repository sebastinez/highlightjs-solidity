{
  "include": ["src"],
  "exclude": ["node_modules/*"],
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "sourceMap": true,
    "baseUrl": "/",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",
    "skipLibCheck": true
  },
  "noEmit": true
}
